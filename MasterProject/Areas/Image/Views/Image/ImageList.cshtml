@using MasterProject.Areas.Image.Models

@{
    ViewData["Title"] = "ImageList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ImageModel> data = ViewBag.ImageList as List<ImageModel>;
}

<div class="container">
    <div class="mb-lg-5">
        <p class="fs-2 text-center fw-bold">
            Image List
        </p>
    </div>
    <div class="text-end mb-3">
        <div>
            <a class="btn btn-primary" asp-area="Image" asp-controller="Image" asp-action="Add">
                Add Record
            </a>
        </div>
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="text-center">
                    <th class="w-25">Images</th>
                    <th class="w-25">Brand</th>
                    <th class="w-25">Description</th>
                    <th class="w-25 ">Action</th>
                </tr>
            </thead>
            <tbody>

                @foreach (ImageModel d in data)
                {
                    
                    <tr class="text-center">
                        <td>
                            <img src="~/Content/Images/@d.Path" height="100" width="100" />
                        </td>
                        <td>@d.ImageBrand</td>
                        <td>@d.ImageDescription</td>
                        <td>
                            <a class="btn btn-danger" asp-area="Image" asp-controller="Image" asp-action="Delete" asp-route-ImageID="@d.ImageID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

