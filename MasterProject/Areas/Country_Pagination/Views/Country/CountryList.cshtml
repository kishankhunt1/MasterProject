@using MasterProject.Areas.Country_Pagination.Models;
@model PaginationViewModel;
@{
    ViewData["Title"] = "CountryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="container">
    <div class="mb-lg-5">
        <p class="fs-2 text-center fw-bold">
            Country List
        </p>
    </div>
    <div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="text-center">
                    <th class="w-25">Country Name</th>
                    <th class="w-25">Country Code</th>
                    <th class="w-25">Created</th>
                    <th class="w-25 ">Modified</th>
                </tr>
            </thead>
            <tbody>

                @foreach (Country d in Model.Countries)
                {

                    <tr class="text-center">
                        <td>@d.CountryName.ToString()</td>
                        <td>@d.CountryCode.ToString()</td>
                        <td>@d.Created.ToString("D")</td>
                        <td>@d.Modified.ToString("D")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="pagination">
    @for (int i = 1; i <= Math.Ceiling((double)Model.Countries.Count / Model.PageSize); i++)
    {
        <a href="/Country/Index?page=@i&pageSize=@Model.PageSize">Page @i</a>
    }
</div>

